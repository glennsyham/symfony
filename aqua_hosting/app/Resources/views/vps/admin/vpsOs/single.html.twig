{% extends 'base.html.twig' %}

{% block title %}OS {{ vpsos.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-12">
                    <div class="pull-left" style="margin-bottom: 10px; margin-top: 20px;">
                        <a href="{{ path('admin_vps_list') }}" class="btn btn-primary pull-left">Return <span class="glyphicon glyphicon-chevron-right"></span></a>
                    </div>
                </div>
                <div  class="col-xs-12"><h2 >{{ vpsos.name }}</h2></div>

                <div  class="col-xs-12">
                    <div class="pull-right" style="margin-bottom: 10px; margin-top: 20px;">
                        <a href="{{ path('admin_cpanelconn_new',{ 'id' : vpsos.id }) }}" class="btn btn-primary pull-right">Add <span class="fa fa-plus-circle"></span></a>
                    </div>
                    <div >
                        <dl>
                            <dt>Platform:</dt>
                            <dd>
                                {% if vpsos.platformId == 1 %}
                                    Linux
                                {% else %}
                                    Windows
                                {% endif %}
                            </dd>
                        </dl>
                        <table class="table table-striped">
                            <tr>
                                <th>Desc</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                              {% for cpanelconn in vpsos.oscpanelconn %}
                                <tr>
                                    <td>{{ cpanelconn.vpscpanel.vpsCpanelDesc }}</td>
                                    <td>{{ cpanelconn.vpscpanel.vpsCpanelPrice }}</td>
                                    <td><a href="{{ path('admin_cpanelconn_delete',{ 'id' : cpanelconn.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-trash"></span></a></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
             </div>
        </div>
    </div>
{% endblock %}


