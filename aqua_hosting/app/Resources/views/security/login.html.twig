{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Login</h1>
                {# app/Resources/views/security/login.html.twig #}
                {# ... you will probably extend your base template, like base.html.twig #}

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}
                    <button type="submit" class="btn-success bg-success" formnovalidate>Login <span class="fa fa-lock"></span></button>
                {{ form_end(form) }}
                <a href="{{ path('member_register') }}" >Register</a>
            </div>
        </div>
    </div>
{% endblock %}